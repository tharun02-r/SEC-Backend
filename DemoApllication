package org.example.demo;
// Declares that this class is part of the 'org.example.demo' package.


import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
// Imports Spring Boot classes needed to launch the application.


@SpringBootApplication
// This annotation enables:
// - @Configuration: marks the class as a source of bean definitions
// - @EnableAutoConfiguration: enables automatic configuration based on dependencies
// - @ComponentScan: enables component scanning in the current and sub-packages
public class DemoApplication {
    // Declares the main application class named 'DemoApplication'

    public static void main(String[] args) {
        SpringApplication.run(DemoApplication.class, args);
        // This line starts the Spring Boot application.
        // It sets up the Spring context and embedded web server (like Tomcat).
    }
}

